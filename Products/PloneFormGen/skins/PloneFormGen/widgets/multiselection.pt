<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="plone">
    <head><title></title></head>
    <body>

        <!-- Selection Widgets -->

        <metal:view_macro define-macro="view"
            tal:define="vocab python:field.Vocabulary(here);
                        value python:accessor();
                        display python:context.displayValue(vocab, value, widget);"
            tal:replace="structure display" />

        <metal:define define-macro="edit">
            <metal:use use-macro="field_macro | context/widgets/field/macros/edit">
                <metal:fill fill-slot="widget_body"
                    tal:define="vocab python:field.Vocabulary(here);
                                format python:test(widget.format, widget.format, 'select');
                                selectionview context/@@at_selection_widget;
                                selection python:selectionview.getSelected(vocab, value);
                                vlen python: len(vocab)">

                    <input type="hidden"
                        value=""
                        tal:condition="not:field/required|nothing"
                        tal:attributes="name string:$fieldName:default:list;" />

                    <fieldset class="radiogroup"
                        tal:condition="python:format=='checkbox'"
                        tal:attributes="id fieldName;">

                        <legend
                            tal:content="python:widget.Label(here)"
                            tal:attributes="id python:fieldName + '_title'"/>
                        <ul role="group"
                            tal:attributes="aria-labelledby python:fieldName + '_title'">

                            <li tal:repeat="item vocab">
                                <input type="checkbox"
                                    tal:attributes="name fieldName;
                                                    id string:${fieldName}_${repeat/item/number};
                                                    checked python:item in selection and 'checked' or None;
                                                    aria-checked python:item in selection and 'true' or 'false';
                                                    value item;"
                                    />
                                <label
                                    tal:content="python:vocab.getValue(item)"
                                    tal:attributes="for string:${fieldName}_${repeat/item/number}"
                                    i18n:translate=""
                                    />
                            </li>
                        </ul>
                    </fieldset>

                    <tal:useSelect
                        tal:condition="python:format=='select'">

                        <metal:use metal:use-macro="context/widgets/field/macros/label" />

                        <select multiple="multiple"
                            class="blurrable"
                            aria-multiselectable="true"
                            tal:attributes="name string:${fieldName}:list;
                                            id fieldName;
                                            size widget/size;
                                            aria-label python:widget.Label(here)">
                            <option
                                tal:repeat="item vocab"
                                tal:attributes="value nocall:item;
                                                selected python:item in selection and 'checked' or None;
                                                aria-selected python:item in selection and 'true' or 'false';"
                                tal:content="python:vocab.getValue(item)"
                                i18n:translate=""
                                />
                        </select>

                    </tal:useSelect>
                </metal:fill>
            </metal:use>
        </metal:define>

        <metal:define metal:define-macro="search">
            <metal:use metal:use-macro="context/widgets/multiselection/macros/edit" />
        </metal:define>

        <metal:hidden_macro define-macro="hidden">
            <input type="hidden"
                name=""
                value=""
                tal:attributes="name fieldName;
                                value value;"
                tal:repeat="value accessor"/>
        </metal:hidden_macro>

    </body>
</html>
