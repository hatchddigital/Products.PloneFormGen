<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="plone">
    <head><title></title></head>
    <body>

        <!-- Password Widgets -->
        <metal:view_macro define-macro="view" tal:replace="structure accessor" />

        <metal:define define-macro="edit">
            <metal:use use-macro="field_macro | context/widgets/field/macros/edit">
                <input metal:fill-slot="widget_body"
                    type="password"
                    value=""
                    tal:attributes="name fieldName;
                                    id fieldName;
                                    size widget/size|string:30;
                                    maxlength widget/maxlength|nothing;
                                    aria-describedby python:fieldName + '_error' if errors.get(fieldName) else None;
                                    aria-required python:'true' if field.required else None"
                     />
            </metal:use>
        </metal:define>

        <div metal:define-macro="search">
            <div metal:use-macro="context/widgets/string/macros/edit" />
        </div>

    </body>

</html>
